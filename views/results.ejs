<!DOCTYPE html>
<html>
<head>
  <title>ChatGPT Results</title>
  <link rel="stylesheet" type="text/css" href="/styles.css">
  <style>
    textarea, input[type="text"] {
      width: 100%;
      box-sizing: border-box;
    }
  </style>
  <script>
    function adjustTextareaHeight(textarea) {
      textarea.style.height = 'auto'; // Reset height to auto to calculate the new height correctly
      textarea.style.height = textarea.scrollHeight + 'px'; // Set the height to the scroll height
    }

    document.addEventListener('DOMContentLoaded', function () {
      const textareas = document.querySelectorAll('textarea');
      textareas.forEach(textarea => {
        adjustTextareaHeight(textarea); // Adjust height on page load
        textarea.addEventListener('input', () => adjustTextareaHeight(textarea)); // Adjust height on input
      });
    });
  </script>
</head>
<body>
  <form action="/edit" method="post">
    <input type="hidden" name="subject" value="<%= subject %>">
    <label for="newSubject">Subject:</label>
    <textarea id="newSubject" name="newSubject" rows="2"><%= subject %></textarea>
    <br>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= title %>">
    <br>
    <label for="editedResponse">Response:</label>
    <textarea name="editedResponse" rows="12" cols="80"><%= response %></textarea>
    <button type="submit">Save</button>
  </form>
  <form action="/generate-more" method="post" style="display:inline;">
    <input type="hidden" name="subject" value="<%= subject %>">
    <button type="submit">Continue</button>
  </form>
  <hr>
  <a href="/">Ask Another Question</a>
</body>
</html>
