<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Threat Model Generator Results</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/styles.css">
  <style>
    textarea {
      resize: vertical; /* Allow vertical resizing */
      overflow: auto; /* Enable scrolling */
      min-height: 150px; /* Set a minimum height */
    }
    .button-group {
      display: flex;
      align-items: center;
    }
    .button-group .btn {
      margin-right: 5px;
    }
    .button-group .separator {
      margin-right: 5px;
    }
  </style>
</head>
<body>
  <div class="container my-5">
    <h1 class="text-center mb-4">Threat Model Results</h1>

    <form action="/edit" method="post" class="mb-3">
      <input type="hidden" name="subject" value="<%= subject %>">
      <div class="mb-3">
        <label for="newSubject" class="form-label">Subject</label>
        <textarea class="form-control" id="newSubject" name="newSubject" rows="2"><%= subject %></textarea>
      </div>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" value="<%= title %>">
      </div>
      <div class="mb-3">
        <label for="editedResponse" class="form-label">Response</label>
        <textarea class="form-control" id="editedResponse" name="editedResponse" rows="12"><%= response %></textarea>
      </div>
      <div class="button-group">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
    <div class="button-group">
      <form action="/generate-more" method="post" class="d-inline">
        <input type="hidden" name="subject" value="<%= subject %>">
        <button type="submit" class="btn btn-secondary">Generate</button>
      </form>
      <span class="separator">|</span>
      <form action="/" method="get" class="d-inline">
        <button type="submit" class="btn btn-secondary">Home</button>
      </form>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Adjust textarea height to fit content
    function adjustTextareaHeight(textarea) {
      textarea.style.height = 'auto'; // Reset height to auto to calculate the new height correctly
      textarea.style.height = textarea.scrollHeight + 'px'; // Set the height to the scroll height
    }

    document.addEventListener('DOMContentLoaded', function () {
      const textareas = document.querySelectorAll('textarea');
      textareas.forEach(textarea => {
        adjustTextareaHeight(textarea); // Adjust height on page load
        textarea.addEventListener('input', () => adjustTextareaHeight(textarea)); // Adjust height on input
      });
    });
  </script>
</body>
</html>
