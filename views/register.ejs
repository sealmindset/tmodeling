<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h1 class="mt-5">Register</h1>
    <form action="/register" method="post">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>
      <!-- New Field for API Key -->
      <div class="mb-3">
        <label for="api_key" class="form-label">ChatGPT API Key (optional)</label>
        <input type="text" class="form-control" id="api_key" name="api_key">
      </div>
      <button type="submit" class="btn btn-primary">Register</button>
    </form>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="alreadyRegisteredModal" tabindex="-1" aria-labelledby="alreadyRegisteredModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="alreadyRegisteredModalLabel">Already Registered</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          This email is already registered. Please login instead.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Check if we need to show the modal
    <% if (typeof showModal !== 'undefined' && showModal) { %>
      var myModal = new bootstrap.Modal(document.getElementById('alreadyRegisteredModal'), {});
      myModal.show();

      // Redirect to login page after modal is closed
      document.getElementById('alreadyRegisteredModal').addEventListener('hidden.bs.modal', function () {
        window.location.href = '/login';
      });
    <% } %>
  </script>
</body>
</html>
